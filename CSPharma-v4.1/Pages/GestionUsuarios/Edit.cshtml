@page
@model CSPharma_v4._1.Pages.GestionUsuarios.EditModel

@{
    ViewData["Title"] = "Edit";
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<div class="body">
    <div class="py-5 text-center">
        <h2>Edit User</h2>
    </div>

    <div class="row g-5">
        <div class="col-md-7 col-lg-8">

            @using (Html.BeginForm("OnPost", "User"))
            {
                @Html.HiddenFor(h => h.User.Id);

                <div class="row g-3">
                    <div class="col-sm-6">
                        <label asp-for="User.UserName" class="form-label"></label>
                        <input asp-for="User.UserName" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="User.UserName" class="text-danger"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="User.Email" class="form-label"></label>
                        <div class="input-group has-validation">
                            <span class="input-group-text"></span>
                            <input asp-for="User.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="User.Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="User.PhoneNumber" class="form-label"></label>
                        <input asp-for="User.PhoneNumber" class="form-control" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="User.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>

                <hr class="my-4">

                <h4 class="mb-3">Roles</h4>

                <div class="my-3">
                    @for (int i = 0; i < @Model.Roles.Count(); i++)
                    {
                        <div class="form-check">
                            @Html.CheckBoxFor(c => @Model.Roles[i].Selected)
                            @Html.HiddenFor(h => @Model.Roles[i].Value)

                            @Html.LabelFor(l => @Model.Roles[i].Selected, @Model.Roles[i].Text, new {@class="form-check-label"})
                            @Html.HiddenFor(h => @Model.Roles[i].Text)
                        </div>
                    }
                </div>

                <hr class="my-4">

                <button class="w-100 btn btn-primary btn-lg" type="submit">Save</button>
            }
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}